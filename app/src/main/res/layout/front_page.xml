<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backcover"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#E8E8E8"
        android:fontFamily="serif"
        android:text="@string/Quran"
        android:textAlignment="center"
        android:textColor="#FEFCFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/surahIndex"
        android:layout_width="249dp"
        android:layout_height="69dp"
        android:layout_marginBottom="32dp"
        android:width="300dp"
        android:backgroundTint="#251C13"
        android:padding="15dp"
        android:radius="10dp"
        android:text="@string/Surah"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/paraIndex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/paraIndex"
        android:layout_width="248dp"
        android:layout_height="65dp"
        android:layout_marginBottom="312dp"

        android:width="300dp"
        android:backgroundTint="#251C13"
        android:padding="15dp"
        android:text="@string/ParaIndex"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ssearch"
        android:layout_width="249dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        android:width="300dp"
        android:backgroundTint="#251C13"
        android:padding="15dp"
        android:radius="10dp"
        android:text="@string/Search"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paraIndex" />

    <TextView
        android:id="@+id/molvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FEFCFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/surahIndex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.809" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/translation"
        android:textColor="#FEFCFF"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>